@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Change Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- Important for responsiveness -->
    <link rel="stylesheet" href="~/css/Login/login.css" />
</head>
<body>
    <div class="container-fluid" style="background-color: #EBEBEB; min-height: 100vh; display: flex; align-items: center; justify-content: center;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="bg-white p-4 shadow card">
                        <!-- Logo Area -->
                        <div class="text-center mb-4" style="background-color: #E51E35; padding: 1rem;">
                            <img src="~/images/KCRI_RED_logo.jpg" class="img-fluid mb-2" alt="Logo" style="max-height: 80px;">
                            <h4 class="text-white m-0 fw-bold">KCFI-EPR</h4>
                        </div>

                        <!-- Change Password Form -->
                        <h4 class="text-center mb-4">Change Your Password</h4>

                            <div class="row">
                            <div class="col-lg-6 mb-3">
                                <label for="username" class="form-label ">Username :<span class="star" id="starUsername">*</span></label>
                                <input type="text" class="form-control" id="txtUsername" placeholder="Enter your username" required>
                                <div class="invalid-feedback" id="errorUsername" style="font-size: small;">
                                    Please enter your username.
                                </div>
                            </div>
                            <div class="col-lg-6 mb-3">
                                <label for="password" class="form-label ">Password :<span class="star" id="starPassword">*</span></label>
                                <input type="password" class="form-control" id="txtPassword" placeholder="Enter your password" required>
                                <div class="invalid-feedback" id="errorPassword" style="font-size: small;">
                                    Please enter your password.
                                </div>
                            </div>
                            </div>
                            <div class="row">

                                <div class="col-lg-6 mb-3">
                                <label for="newPassword" class="form-label ">New Password :<span class="star" id="starNewPassword">*</span></label>
                                    <input type="password" class="form-control" id="txtNewPassword" placeholder="Enter new password" required>
                                <div class="invalid-feedback" id="errorPassword" style="font-size: small;">
                                    Please enter your new password.
                                </div>
                                </div>
                                <div class="col-lg-6 mb-3">
                                <label for="confirmPassword" class="form-label ">Confirm Password :<span class="star" id="starConfirmPassword">*</span></label>
                                    <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Confirm new password" required>
                                <div class="invalid-feedback" id="errorConfirmPassword" style="font-size: small;">
                                    Please enter your confirm password.
                                </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-danger w-100" id="btnChange">Change Password</button>
     

                        <div class="text-center mt-3">
                            Already change your password? <a class=" nav-link" asp-controller="Login" asp-action="Login">Back Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Login/ChangePassword.js"></script>
</body>
</html>