<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>And Purchase</title>
    <link rel="stylesheet" href="~/css/Purchase/PurchaseRequest.css" />
    
</head>
<body>
    <div class="container-fluid p-0">
        <div class="title align-items-center px-3 m-0">
            <p class="ms-2 mb-0">Purchase Request</p>
        </div>
    </div>

    <div class="container-fluid">
        <form>
            <!-- Section 1: Date and PR Info -->
            <div class="row">
                <div class="col-lg-4">
                    <div class="row d-flex">
                        <div class="col-lg-4">
                            <label for="requestedDate">Requested Date :</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="date" id="requestedDate" />
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="row d-flex justify-content-end">
                        <div class="col-lg-4 text-lg-end"> <label for="requireDate">Require Date : <span class="star" id="starRequireDate">*</span></label></div>
                        <div class="col-lg-8">
                            <input type="date" id="requireDate" class="form-control"/>
                            <div class="invalid-feedback"
                                 id="errorRequireDate"
                                 style="font-size: small">
                                Require date is required.
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row d-flex justify-content-end">
                        <div class="col-lg-3 text-lg-end">
                            <label for="prNo ">PR No :</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" id="prNo" placeholder="Enter PR Number" />
                        </div>
                    </div>


                </div>

            </div>


            <div class="row">

                <div class="col-lg-4">
                    <div class="row d-flex justify-content-end">
                        <div class="col-lg-3">
                            <label for="company">Company :</label>
                        </div>
                        <div class="col-lg-8">
                            <select id="company">
                            </select>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="row d-flex justify-content-end">
                        <div class="col-lg-3 text-lg-end">
                            <label for="devision">Devision :</label>
                        </div>
                        <div class="col-lg-8">
                            <select id="devision">
                                <option value="">Select Devision</option>
                                <option value="KCRI">CGs</option>
                                <option value="EPR">MSG</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row d-flex justify-content-end">
                        <div class="col-lg-3 text-lg-end">
                            <label class="text-center" for="status">Status :</label>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" id="status" placeholder="" value="Status" />
                        </div>
                    </div>
                </div>
            </div>
            <hr class="m-0 mb-2" />
            <!-- Section 2: Budget Information -->
            <div class="row">
                <div class="col-12 col-md-2">
                    <label class="form-label">Budgeted :</label>
                </div>
                <div class="col-12 col-md-10">
                    <div class="row g-2">
                        <div class="col-6 col-sm-4 col-md-3">
                            <div class="form-check">
                                <input type="checkbox" name="budgetedYes" id="budgetedYes" value="Yes" class="form-check-input">
                                <label for="budgetedYes" class="form-check-label">Yes</label>
                            </div>
                        </div>
                        <div class="col-6 col-sm-4 col-md-3">
                            <div class="form-check">
                                <input type="checkbox" name="budgetedNo" id="budgetedNo" value="No" class="form-check-input">
                                <label for="budgetedNo" class="form-check-label">No</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="m-0 mb-2" />
            <!-- Section 3: Delivery Method -->
            <div class="row align-items-center">
                <div class="col-12 col-md-2">
                    <label class="form-label">Preferred Method of Delivery :</label>
                </div>
                <div class="col-12 col-md-10">
                    <div class="row g-3 align-items-center ">
                        <div class="col-12 col-md-3">
                            <div class="form-check">
                                <input type="checkbox" name="deliveryMethodSelfPickup" id="selfPickup" value="Self-pick up" class="form-check-input">
                                <label for="selfPickup" class="form-check-label">Self-pick up</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-9 align-items-center ">
                            <div class="row align-items-center mb-0 pleft">
                                <div class="form-check col-12 col-md-4  ">
                                    <input type="checkbox" name="deliveryMethodAddress" id="deliveryAddress" value="Delivery to Address" class="form-check-input ">
                                    <label for="deliveryAddress" class="form-check-label">Please deliver to following address</label>
                                </div>
                                <div class="col-12 col-md-8">
                                    <input type="text" name="deliveryAddressText" class="" placeholder="Enter address">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <hr class="m-0 mb-2" />

            <!-- Section 4: Advance Payment -->
            <div class="row">
                <div class="col-12 col-md-2">
                    <label class="form-label">Advance Required :</label>
                </div>
                <div class="col-12 col-md-10">
                    <div class="row g-2">
                        <div class="col-6 col-sm-3">
                            <div class="form-check">
                                <input type="checkbox" name="advanceRequiredYes" id="advanceYes" value="Yes" class="form-check-input">
                                <label for="advanceYes" class="form-check-label">Yes</label>
                            </div>
                        </div>
                        <div class="col-6 col-sm-3">
                            <div class="form-check">
                                <input type="checkbox" name="advanceRequiredNo" id="advanceNo" value="No" class="form-check-input">
                                <label for="advanceNo" class="form-check-label">No</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="m-0 mb-2" />

            <!-- Section 5: Cost Center -->
            <div class="row">
                <div class="col-lg-2">
                    <label>Cost Center Dept :</label>
                </div>
                <div class="col-lg-10">
                    <div class="row">
                        <div class="col-md-6 col-lg-3">
                            <div class="form-check">
                                <input type="checkbox" id="costCenterFixedAsset" name="costCenter" value="Fixed Asset" class="form-check-input" />
                                <label for="costCenterFixedAsset" class="form-check-label">Fixed Asset</label>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="form-check">
                                <input type="checkbox" id="costCenterStock" name="costCenter" value="Stock" class="form-check-input" />
                                <label for="costCenterStock" class="form-check-label">Stock</label>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="form-check">
                                <input type="checkbox" id="costCenterStationery" name="costCenter" value="Stationery" class="form-check-input" />
                                <label for="costCenterStationery" class="form-check-label">Stationery</label>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="form-check">
                                <input type="checkbox" id="costCenterService" name="costCenter" value="Service" class="form-check-input" />
                                <label for="costCenterService" class="form-check-label">Service</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="m-0 mb-2" />
            <!-- Section 6: Purpose and Specifications -->


            <div class="row">
                <div class="col-lg-2">
                    <label class="" for="purpose">Purpose of the Requirement :</label>
                </div>
                <div class="col-lg-10 ">
                    <textarea id="purpose" rows="2" placeholder="Enter purpose..."></textarea>
                </div>
            </div>




        </form>
        <table id="editableTable">
            <colgroup>
                <col style="width: 5%;">
                <col style="width: 30%;">
                <col style="width: 5%;">
                <col style="width: 18%;">
                <col style="width: 18%;">
                <col style="width: 19%;">
            </colgroup>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Description</th>
                    <th>UOM</th>
                    <th>Quantity</th>
                    <th>Ust. Unit Price</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <!-- Rows added by jQuery -->
            </tbody>
            <tfoot>
                <tr>
                    <td class="total-cell text-end" colspan="3" id="totalA">Total</td>
                    <td class="total-cell" id="totalB">0</td>
                    <td class="total-cell text-start" colspan="2" id="totalC"><span class="text-end">$</span></td>
                </tr>
            </tfoot>
        </table>
        <br>
        <div class="row justify-content-end mb-3">
            <div class="col-auto">
                <button id="addRow" class="btn btn-primary">Add Row</button>
                <button id="removeRow" class="btn btn-danger">Remove Row</button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                <label for="additionalSpec">Additional Specifications :</label>
            </div>
            <div class="col-lg-10">
                <textarea id="additionalSpec" rows="2" placeholder="Enter additional specs..."></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3" id="btnsubmit">Submit Request</button>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/staticData.js"></script>
    <script src="~/js/Purchase/PurchaseRequest.js"></script>

</body>
</html>
